<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../package.dtd">
<!-- do not use the "Type" attribute here, that one is only for
     generated package.xml files -->
<package>
    <name>DBA_Relational</name>
    <summary>Berkely-style database abstraction class</summary>
    <description>
Table management extension to DBA
    </description>

    <maintainers>
        <maintainer>
            <user>busterb</user>
            <name>Brent Cook</name>
            <email>busterb@mail.utexas.edu</email>
            <role>lead</role>
        </maintainer>
    </maintainers>

    <release>
        <license>LGPL</license>
        <version>0.20</version>
        <date>2002-10-22</date>
        <state>devel</state>
        <notes>
 * Added a HTML Table formatting function to Toolbox.php
 * Added new unary functions (avg, min, max, sum, count)
 * Bug fixes
        </notes>
        <filelist>
            <dir name="/" baseinstalldir="/DBA">
                <file role="php">Relational.php</file>
                <file role="php">Table.php</file>
                <file role="php">Toolbox.php</file>
                <file role="php">Functions.php</file>
                <dir name="tests" role="test">
                    <file role="test">empSchema.php</file>
                    <file role="test">hatSchema.php</file>
                    <file role="test">test_relational.php</file>
                    <file role="test">test_table.php</file>
                </dir>
                <dir name="docs" role="doc">
                    <file role="doc">Examples.txt</file>
                </dir>
            </dir>
        </filelist>
    <deps>
        <dep type="php" rel="ge" version="4.0.4pl1" />
        <dep type="pkg" rel="has">DBA</dep>
    </deps>
    </release>
</package>
